var blcgGridTemplateSyntax = /(^|.|\r|\n)({{(\w+)}})/;
var blcgGridForm = new varienForm('blcg_grid_edit_form');

function saveAndContinueEdit(urlTemplate)
{
    var template = new Template(urlTemplate, blcgGridTemplateSyntax);
    var url = template.evaluate({tab_id: blcg_grid_edit_tabsJsTabs.activeTab.id});
    $('blcg_grid_edit_form_referer_input').remove();
    blcgGridForm.submit(url);
}

function setSettings(urlTemplate, typeElement)
{
    var template = new Template(urlTemplate, blcgGridTemplateSyntax);
    setLocation(template.evaluate({type: $F(typeElement)}));
}

Event.observe(window, 'load', function() { 
    if ('<?php echo $this->getSelectedTabId() ?>') {
